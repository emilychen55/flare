<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/lbwallpaper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Flare$PlaceholderFragment">

    <TextView
        android:text="@string/welcome"
        android:textColor="#000000"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:id="@+id/lightOn_btn"
        android:text="Light On"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape_t1"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/lightOff_btn"
        android:layout_alignStart="@+id/lightOff_btn"
        android:layout_marginTop="69dp" />

    <Button
        android:id="@+id/lightOff_btn"
        android:text="Light Off"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape_t2"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="141dp" />

</RelativeLayout>
